{
  "expo": {
    "name": "bit-food-native",
    "slug": "bit-food-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bitfoodnative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.bitfoodnative",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to show where you are on the map and nearby places."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.bitfoodnative"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      ["expo-location", {
        "locationWhenInUsePermission": "We use your location to show where you are on the map and nearby places."
      }]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
